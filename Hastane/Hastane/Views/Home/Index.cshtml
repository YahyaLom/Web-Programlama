@section Scripts 
{
    <!--<script src="~/lib/fullcalender/core/index.global.js"></script>-->
    <!--<script src="~/lib/fullcalender/core/index.global.min.js"></script>-->
    
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js'></script>
    <script src="~/lib/fullcalender/core/locales/tr.global.min.js"></script>
    <script src="~/lib/fullcalender/core/locales/tr.global.js"></script>
    <!--<script src="~/lib/fullcalender/timegrid/index.global.min.js"></script>-->
    <!--<script src="~/lib/fullcalender/timegrid/index.global.js"></script>-->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');

            var calendar = new FullCalendar.Calendar(calendarEl, {
                timeZone: 'UTC',
                weekends: false, locale: 'tr',
                initialView: 'timeGridWeek',
                headerToolbar: {
                    start: 'dayGridMonth timeGridWeek timeGridDay today',
                    end: 'prevYear prev next nextYear',
                    center: 'title',
                    //right: 'timeGridWeek,timeGridDay'
                },
                events: '/api/demo-feeds/events.json',
                titleFormat: {
                    year: "numeric",
                    //sayfa içinde ki title için css düzenlemesi.
                    month: "long",
                    day: "numeric",
                    //weekday:'long'
                },
                footerToolbar: {
                    start: 'today',
                    center: 'title',
                    end: 'prevYear,nextYear'
                },
               
            });

            calendar.render();
        });
    </script>



}

