@model Polikinlik
<h2>Polikinlik Güncelle Sayfasi</h2>

<form method="post">


	<div class="border p-3 mt-5">

		<div class="row pb-3  form-group">
			<h2 class="text-primary "><strong>Polikinlik Güncelle</strong> </h2>
			</hr>
		</div>


		<div class="mb-3  form-group"
		<label asp-for="Ad"></label>
		<input asp-for="Ad" class="form-control">
		<span asp-validation-for="Ad" class="text-danger"></span>
		</div>

		<div class="mb-3  form-group"
		<label asp-for=Adres></label>
		<input asp-for="Adres" class="form-control">
		<span asp-validation-for="Adres" class="text-danger"></span>
		</div>

		

		<br />

		<button type="submit" class="btn btn-outline-primary" style="width:250px">Polikinlik Güncelle</button>

		<a asp-controller="Polikinlik" asp-action="Index" class="btn btn-outline-primary style="width:250px">
			Polikinlik Listesine Dön
		</a>

	</div>






</form>