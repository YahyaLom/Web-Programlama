@model List<Randevu>

<h1>Randevu Index</h1>

@if (@TempData["basarili"] != null)
{
	<div class="alert alert-dismissible alert-success">
		<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
		<strong>Tebrikler!</strong> <a href="#" class="alert-link">@TempData["basarili"]</a>.
	</div>
}


<div class="row">
	
<div class="container">

	<div class="row pt-3 pb-4">
		<h3><strong>Randevu Listesi</strong></h3>
	</div>


		<table class="table table-bordered"

	<tr>

		<thead>

				<th>
					Id
				</th>

				<th>
					Hasta Adı
				</th>

				<th>
					Doktor Adı 
				</th>

				<th>
					Polikinlik Adresi
				</th>

				<th>
					Randevu Tarihi
				</th>

				<th>
					Randevu Saati
				</th>


				<th>
					Açıklama
				</th>

				<th>
						@* guncelle *@
				</th>

				<th>
						@* sil *@
				</th>
		</thead>
		<tbody>
					@foreach (var randevu in Model)
					{
							<tr>

								<th>
								@randevu.Id
								</th>

								<th>
								@randevu.Hasta.Ad
								</th>

								<th>
								@randevu.Doktor.Ad
								</th>

								<th>
								@randevu.Polikinlik.Adres
								</th>

								<th>
								@randevu.Tarih
								</th>


								<th>
									@randevu.RandevuSaati

								</th>


								<th>
								@randevu.Aciklama
								</th>

								

								<th>
									<a asp-controller="Randevu" asp-action="Guncelle" asp-route-id=@randevu.Id class="btn btn-outline-success">Güncelle</a>

								</th>




								<th>
									<a asp-controller="Randevu" asp-action="Sil" asp-route-id="@randevu.Id" class="btn btn-outline-primary">Sİl</a>

								</th>


							</tr>

					}
		</tbody>



	</tr>


</table>

	
</div>


</div>


